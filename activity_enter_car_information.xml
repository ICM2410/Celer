<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterCarInformation">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnBack"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/gray"
                android:text="@string/back"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:drawableStart="@drawable/back"
                android:fontFamily="@font/poppinsmedium"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bienvenido Perfil"
                android:textSize="30sp"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linearlayout1"
            android:padding="5dp"
            tools:ignore="MissingConstraints">
            <!-- Contenido del segundo LinearLayout -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles del vehiculo"
                android:textSize="25sp"
                android:padding="5dp"></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elija el tipo de vehiculo "
                android:textSize="20sp"
                android:padding="5dp"></TextView>
            <Spinner
                android:id="@+id/tipoCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tipoCarro"

                ></Spinner>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese la marca del vehículo "
                android:textSize="20sp"
                android:padding="5dp"></TextView>
            <Spinner
                android:id="@+id/marcaCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/marcaCarro"
                ></Spinner>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo del Vehículo "
                android:textSize="20sp"
                android:padding="5dp"></TextView>
            <Spinner
                android:id="@+id/modeloCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/modeloCarro"
                ></Spinner>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero de Registro "
                android:textSize="20sp"
                android:padding="5dp"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"></EditText>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Año del Vehículo "
                android:textSize="20sp"
                android:padding="5dp"></TextView>
            <Spinner
                android:id="@+id/yearCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/yearCarro"
                ></Spinner>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color del Vehiculo "
                android:textSize="20sp"
                android:padding="5dp"></TextView>
            <Spinner
                android:id="@+id/colorCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/colorCarro"
                ></Spinner>


        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btnNextGotoProfilePhotoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:width="0dp"
        android:background="@drawable/btn_background_primary"
        android:fontFamily="@font/poppinsmedium"
        android:paddingVertical="15dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>